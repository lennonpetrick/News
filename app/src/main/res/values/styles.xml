<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="AppTheme.ThemeToolbar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="AppTheme.Title" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="AppTheme.UrlText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="AppTheme.Text.Small" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="AppTheme.Text.Small.Black" parent="AppTheme.Text.Small">
        <item name="android:textColor">@color/text_black</item>
    </style>
</resources>
